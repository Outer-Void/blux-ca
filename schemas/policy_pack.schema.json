{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "policy_pack_id",
    "policy_pack_version",
    "schema_version",
    "limits",
    "toggles"
  ],
  "properties": {
    "policy_pack_id": {"type": "string"},
    "policy_pack_version": {"type": "string"},
    "schema_version": {"type": "string"},
    "description": {"type": "string"},
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_files", "max_patches", "max_content_bytes", "max_total_bytes"],
      "properties": {
        "max_files": {"type": "integer", "minimum": 1},
        "max_patches": {"type": "integer", "minimum": 1},
        "max_content_bytes": {"type": "integer", "minimum": 1},
        "max_total_bytes": {"type": "integer", "minimum": 1}
      }
    },
    "toggles": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enforce_todo_check", "enforce_python_syntax"],
      "properties": {
        "enforce_todo_check": {"type": "boolean"},
        "enforce_python_syntax": {"type": "boolean"}
      }
    }
  }
}
